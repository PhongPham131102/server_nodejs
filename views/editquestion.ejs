        // hàm chọn giá trị thời gian ban đầu cho câu hỏi
        function addSelectedClassToTime(time) {
          $(".frame-pick-time .element").each(function () {
            var dataValue = parseInt($(this).find(".content").data("value"));
            if (dataValue == time) {
              $(this).addClass("selected");
